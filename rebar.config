{deps_dir,["deps"]}.
{erl_opts, [
   warn_export_all,
   % warn_missing_spec,
   % warnings_as_errors,
   debug_info
]}.
{xref_checks, [
   undefined_function_calls,
   deprecated_function_calls,
   locals_not_used
]}.
{deps, [
   {sync,   ".*", {git, "https://github.com/jamhed/sync.git", {branch, master}}},
   {scl,    ".*", {git, "https://github.com/jamhed/scl.git", {branch, master}}},
   {fs_event,".*", {git, "https://github.com/jamhed/fs_event.git", {branch, master}}}
]}.
